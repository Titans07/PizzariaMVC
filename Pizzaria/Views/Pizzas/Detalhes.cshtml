@model Pizza

@{
    ViewData["Title"] = "Detalhes Pizza";
}

<div class="row">
    <div class="col-md-8">
        <div class="card mb-12">
            <div class="row g-0">
                <div class="col-md-12">
                    <div class="card-header text-white bg-info">
                        <p class="card-text">
                            <h5 class="card-title">
                                @Model.Nome
                                <a class="text-white float-right" asp-action="Atualizar" asp-route-id="@Model.Id"><i class="fa-regular fa-pen-to-square"></i></a>
                            </h5>
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <img src="@Model.FotoURL" width="100%" alt="@Model.Nome">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <p class="card-text">
                            <b>Tamanho: </b>
                            <a asp-controller="Cinemas" asp-action="Detalhes" asp-route-id="@Model.TamanhoId">
                                @Model.Tamanho.Nome
                            </a>
                        </p>
                        <p class="card-text">
                            <b>Preço: </b>
                            <a asp-controller="Cinemas" asp-action="Detalhes" asp-route-id="@Model.Preco">
                                @Model.Preco
                            </a>
                        </p>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>