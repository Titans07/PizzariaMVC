@model IEnumerable<Pizza>

@{
    ViewData["Title"] = "Índice Pizza";
}

<partial name="_NovoItem" model="nameof(Pizza)" />

<div class="row">
    <div class="col-md-10 offset-md-1">

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Ações</th>
                    <th>@Html.DisplayNameFor(model => model.FotoURL)</th>
                    <th>@Html.DisplayNameFor(model => model.Nome)</th>
                    <th>@Html.DisplayNameFor(model => model.Preco)</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var pizza in Model)
                {

                    <tr>
                        <td>
                            <div class="d-flex flex-column">
                                <a class="btn btn-success" asp-action="Atualizar" asp-route-id="@pizza.Id">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                    Editar
                                </a>

                                <a class="btn btn-primary mt-1" asp-action="Detalhes" asp-route-id="@pizza.Id">
                                    <i class="fa-solid fa-eye"></i>
                                    Ver
                                </a>

                                <a class="btn btn-danger mt-1" asp-action="Deletar" asp-route-id="@pizza.Id">
                                    <i class="fa-solid fa-trash-can"></i>
                                    Excluir
                                </a>
                            </div>
                        </td>
                        <td class="align-middle">
                            <img src="@pizza.FotoURL" style="max-width:100px" alt="@pizza.Nome">
                        </td>
                        <td class="align-middle">@pizza.Nome</td>
                        <td class="align-middle">@pizza.Preco</td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>