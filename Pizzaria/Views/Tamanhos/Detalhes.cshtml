@model Pizzaria.Models.ViewModels.RequestDTO.PostTamanhoDTO

@{
    ViewData["Title"] = "Detalhes Tamanho";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>Detalhes Tamanho</h4>
        </p>

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Detalhes">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Nome" class="control-label"></label>
                                <input asp-for="Nome" class="form-control" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Detalhar" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Mostrar Todos</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>